<div id="preloader" class="fixed top-0 left-0 w-full h-full bg-white flex justify-center items-center z-50">
    <div class="spinner border-t-4 border-blue-600 border-solid border-4 w-16 h-16 rounded-full animate-spin"></div>
  </div>
  
  <!-- Preloader CSS -->
  <style>
    /* Preloader Styles */
    #preloader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(255, 255, 255, 0.8);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }
  
    .spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #3498db;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 2s linear infinite;
    }
  
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
  
  <!-- Preloader JavaScript with Timeout -->
  <script>
    window.addEventListener('load', function() {
      // Timeout for 1 seconds to make the preloader stay visible longer
      setTimeout(function() {
        // Hide the preloader after 1 seconds
        document.getElementById('preloader').style.display = 'none';
      }, 0.900); // 1000 milliseconds = 1 seconds
    });
  </script>
  
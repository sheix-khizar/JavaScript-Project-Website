<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - Project Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
   
</head>

<body class="bg-gray-100">
  


    <!-- Project Details -->
    <div class="container mx-auto py-12 px-4">
  <!-- Display Image -->
  <div class="mb-6 flex justify-center">
    <img src="<%= project.image %>" alt="<%= project.title %> Image" class="w-1/2 sm:w-1/3 lg:w-1/4 max-w-full h-auto rounded-lg shadow-lg">
</div>
        <h1 class="p-text text-4xl font-bold mb-6 text-blue-600"><%= project.title %></h1>
        <p class="text-lg text-gray-700 mb-6"><%= project.description %></p>

        <h2 class="p-text text-2xl font-bold mb-4 text-blue-600">Detailed Description:</h2>
        <p class="text-gray-700 mb-6"><%= project.detailedDescription %></p>

        <h2 class="p-text text-2xl font-bold mb-4 text-blue-600">Features:</h2>
        <ul class="list-disc list-inside mb-6 text-gray-700">
            <% project.features.forEach(function(feature) { %>
                <li><%= feature %></li>
            <% }) %>
        </ul>

        <div class="flex space-x-4">
            <% if (project.demo) { %>
                <a href="<%= project.demo %>" target="_blank" rel="noopener noreferrer" class="btnn bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700">
                    Live Demo
                </a>
            <% } %>
            <% if (project.github) { %>
                <a href="<%= project.github %>" target="_blank" rel="noopener noreferrer" class="bg-gray-600 text-white px-6 py-3 rounded hover:bg-gray-700">
                    View Code
                </a>
            <% } %>
        </div>
        

        <!-- <p class="mt-8">
            <a href="/projects" class="text-blue-600 hover:underline">Back to Project List</a>
        </p> -->
    </div>

  
</body>
</html>
